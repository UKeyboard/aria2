dir=/sdcard/Download
log=/sdcard/aria2/aria2.log
input-file=/sdcard/aria2/aria2.session
save-session=/sdcard/aria2/aria2.session
save-session-interval=60
force-save=true
log-level=error

# see — split option
max-concurrent-downloads=5
continue=true
max-overall-download-limit=10M
max-overall-upload-limit=64K
max-upload-limit=20K

# Http/FTP options
connect-timeout=60
lowest-speed-limit=10K
max-connection-per-server=6
max-file-not-found=2
min-split-size=1M
split=5
check-certificate=false
http-no-cache=true

# FTP Specific Options
# BT/PT Setting
bt-enable-lpd=true
#bt-max-peers=55
follow-torrent=true
enable-dht6=false
bt-seed-unverified
rpc-save-upload-metadata=true
bt-hash-check-seed
bt-remove-unselected-file
bt-request-peer-speed-limit=100K
seed-ratio=0.5
bt-save-metadata=true

# Metalink Specific Options
# RPC Options
enable-rpc=true
pause=false
pause-metadata=false
rpc-allow-origin-all=true
rpc-listen-all=false
rpc-listen-port=10086
rpc-save-upload-metadata=true
rpc-secure=false

# Advanced Options
daemon=true
disable-ipv6=true
enable-mmap=true
file-allocation=falloc
max-download-result=64
no-file-allocation-limit=32M
force-sequential=false
parameterized-uri=true
check-certificate=false
disk-cache=64M
